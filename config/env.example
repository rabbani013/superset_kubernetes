# Superset SMTP Configuration
# Copy this file to .env and fill in your SMTP details

# SMTP Server Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Your Email Credentials
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_MAIL_FROM=your-email@gmail.com

# For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" (not your regular password)
# 3. Use the app password as SMTP_PASSWORD

# For other email providers:
# - Outlook: smtp-mail.outlook.com:587
# - Yahoo: smtp.mail.yahoo.com:587
# - Custom: your-smtp-server.com:587

# Port Configuration
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5432
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6379
SUPERSET_PORT=8088
SUPERSET_EXTERNAL_PORT=8080

# Container Names (for multiple instances)
POSTGRES_CONTAINER_NAME=superset_postgres
REDIS_CONTAINER_NAME=superset_redis
SUPERSET_CONTAINER_NAME=superset_web
WORKER_CONTAINER_NAME=superset_worker
BEAT_CONTAINER_NAME=superset_beat

# Network Configuration
NETWORK_NAME=superset_network

# Database Configuration
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset
POSTGRES_DB=superset
POSTGRES_DATA_PATH=./data/pgdata

# Redis Configuration
REDIS_PASSWORD=superset

# Superset Configuration
SUPERSET_EXPORTS_PATH=./data/superset-repo
